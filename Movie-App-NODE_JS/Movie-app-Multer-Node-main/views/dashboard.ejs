<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #141414;
            color: #fff;
        }

        .table {
            color: #fff;
        }

        .table thead {
            background: #000;
        }

        .table img {
            width: 80px;
            border-radius: 5px;
        }

        .btn-edit {
            background: #198754;
            color: #fff;
        }

        .btn-delete {
            background: #dc3545;
            color: #fff;
        }

        .btn-edit:hover,
        .btn-delete:hover {
            opacity: 0.85;
        }

        nav {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
            padding: 1%;
        }
        nav .links{
            height: 100% !important;
            display: flex;
            align-items: center;
            gap: 20px;
        }
    </style>
</head>

<body class="p-4">

    <div class="container">
        <nav>
            <h2 style="margin: 0;">üé¨ Movie Dashboard</h2>
            <div class="links">
                <a href="/" class="btn btn-secondary">Home</a>
                <a href="/newMovie" class="btn btn-danger">Add movie</a>
            </div>
        </nav>
        <table class="table table-dark table-hover align-middle">
            <thead>
                <tr>
                    <th scope="col">Poster</th>
                    <th scope="col">Title</th>
                    <th scope="col">Language</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>

                <%datas.forEach((val,i)=>{%>
                    <tr>
                        <td>
                            <img src="<%=val.image%>" alt="<%=val.title%>">
                        </td>
                        <td>
                            <%=val.title%>
                        </td>
                        <td>
                            <%=val.language%>
                        </td>
                        <td>‚≠ê <%=val.rating%>/10</td>
                        <td>
                            <a class="btn btn-sm btn-edit" href="/editMovie/<%=val.id%>">Edit</a>
                            <a class="btn btn-sm btn-delete" href="/deleteMovie/<%=val.id%>">Delete</a>
                        </td>
                    </tr>
                    <%})%>

            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>