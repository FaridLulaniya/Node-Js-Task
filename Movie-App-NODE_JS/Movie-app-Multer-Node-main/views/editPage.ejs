<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Movie</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #141414;
            color: #fff;
        }

        nav {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
            padding: 1%;
        }

        nav .links {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .form-container {
            background: #1f1f1f;
            padding: 30px;
            border-radius: 10px;
            max-width: 500px;
            margin: auto;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.6);
        }

        .form-control {
            background: #000;
            border: 1px solid #333;
            color: #fff;
        }

        .form-control:focus {
            border-color: #dc3545;
            box-shadow: none;
            background: #111;
            color: #fff;
        }

        .btn-submit {
            background: #198754;
            color: #fff;
            width: 100%;
        }

        .btn-submit:hover {
            opacity: 0.85;
        }

        .poster-preview {
            margin-top: 15px;
            text-align: center;
        }

        .poster-preview img {
            width: 150px;
            border-radius: 8px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.7);
        }
    </style>
</head>

<body class="p-4">
    <div class="container">
        <!-- Navbar -->
        <nav>
            <h2 style="margin: 0;">üé¨ Movie Dashboard</h2>
            <div class="links">
                <a href="/" class="btn btn-secondary">Home</a>
                <a href="/newMovie" class="btn btn-danger">Add movie</a>
            </div>
        </nav>

        <!-- Form -->
        <div class="form-container">
            <h3 class="text-center mb-4">‚úèÔ∏è Edit Movie</h3>
            <form action="/updatedMovie/<%=oneData.id%>" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label">Poster</label>
                    <input type="file" name="image" class="form-control" id="posterInput" accept="image/*">
                    <!-- Preview -->
                    <div class="poster-preview" id="posterPreview">
                        <p class="text-muted">Current Poster:</p>
                        <img id="posterImage" src="<%=oneData.image%>" alt="Poster Preview">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input type="text" name="title" class="form-control" value="<%=oneData.title%>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Language</label>
                    <input type="text" name="language" class="form-control" value="<%=oneData.language%>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Rating</label>
                    <input type="number" name="rating" class="form-control" value="<%=oneData.rating%>" min="1" max="10"
                        required>
                </div>
                <button type="submit" class="btn btn-submit">Save Changes</button>
            </form>
        </div>
    </div>

    <script>
        // Show poster preview when new file selected
        const posterInput = document.getElementById('posterInput');
        const posterImage = document.getElementById('posterImage');

        posterInput.addEventListener('change', () => {
            const file = posterInput.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = e => {
                    posterImage.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
</body>

</html>