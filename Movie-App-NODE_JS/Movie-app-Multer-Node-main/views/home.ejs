<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CineWorld</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="./style.css">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-black px-4">
        <a class="navbar-brand fw-bold text-danger" href="/">üé¨ CineWorld</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                
          
                <li class="nav-item"><a class="nav-link" href="/dashboard">Dashboard</a></li>
            </ul>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero d-flex align-items-center justify-content-center text-center text-white">
        <div>
            <h1 class="display-4 fw-bold">Unlimited Movies, TV Shows, and More.</h1>
            <p class="lead">Watch anywhere. Cancel anytime.</p>
            <a href="#" class="btn btn-danger btn-lg mt-3">Watch Now</a>
        </div>
    </section>

    <!-- Trending Movies -->
    <section class="container my-5">
        <h2 class="text-white mb-4">Trending Now</h2>
        <div class="row g-3">
            <!-- Movie Card -->

            <%datas.forEach((val,i)=>{%>
                <div class="col-6 col-md-3">
                    <div class="card bg-dark text-white border-0 movie-card">
                        <img src="<%=val.image%>" class="card-img-top rounded" alt="Movie">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=val.title%>
                            </h5>
                            <p class="card-text mb-1"><small>
                                    <%=val.language%>
                                </small></p>
                            <p class="card-text"><small>‚≠ê <%=val.rating%>/10</small></p>
                        </div>
                    </div>
                </div>
                <%})%>
                    <div class="col-6 col-md-3">
                        <div class="card bg-dark text-white border-0 movie-card">
                            <img src="https://image.tmdb.org/t/p/w300/8s4h9friP6Ci3adRGahHARVd76E.jpg"
                                class="card-img-top rounded" alt="Movie">
                            <div class="card-body">
                                <h5 class="card-title">Spider-Man: No Way Home</h5>
                                <p class="card-text mb-1"><small>Language: English</small></p>
                                <p class="card-text"><small>‚≠ê 8.7/10</small></p>
                            </div>
                        </div>
                    </div>

                    <div class="col-6 col-md-3">
                        <div class="card bg-dark text-white border-0 movie-card">
                            <img src="https://image.tmdb.org/t/p/w300/6ELCZlTA5lGUops70hKdB83WJxH.jpg"
                                class="card-img-top rounded" alt="Movie">
                            <div class="card-body">
                                <h5 class="card-title">Black Panther</h5>
                                <p class="card-text mb-1"><small>Language: English</small></p>
                                <p class="card-text"><small>‚≠ê 7.5/10</small></p>
                            </div>
                        </div>
                    </div>

                    <div class="col-6 col-md-3">
                        <div class="card bg-dark text-white border-0 movie-card">
                            <img src="https://image.tmdb.org/t/p/w300/9Gtg2DzBhmYamXBS1hKAhiwbBKS.jpg"
                                class="card-img-top rounded" alt="Movie">
                            <div class="card-body">
                                <h5 class="card-title">Avatar: The Way of Water</h5>
                                <p class="card-text mb-1"><small>Language: English</small></p>
                                <p class="card-text"><small>‚≠ê 7.8/10</small></p>
                            </div>
                        </div>
                    </div>

                    <div class="col-6 col-md-3">
                        <div class="card bg-dark text-white border-0 movie-card">
                            <img src="https://image.tmdb.org/t/p/w300/5P8SmMzSNYikXpxil6BYzJ16611.jpg"
                                class="card-img-top rounded" alt="Movie">
                            <div class="card-body">
                                <h5 class="card-title">The Batman</h5>
                                <p class="card-text mb-1"><small>Language: English</small></p>
                                <p class="card-text"><small>‚≠ê 8.3/10</small></p>
                            </div>
                        </div>
                    </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-black text-center text-white py-3">
        <p class="mb-0">¬© 2025 CineWorld. All Rights Reserved.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>